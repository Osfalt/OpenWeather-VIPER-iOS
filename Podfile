source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
use_frameworks!

target 'OpenWeather' do
    pod 'Alamofire', '~> 4.0'
    pod 'Reqres' # network activity logger
    pod 'AlamofireObjectMapper', '~> 4.0'
    pod 'Swinject', '~> 2.0.0'
    pod 'SwinjectStoryboard', '~> 1.0.0'
    pod 'SDWebImage'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'BRYXBanner'
    pod 'ViperMcFlurry', :git => 'https://github.com/rambler-digital-solutions/ViperMcFlurry.git', :branch => 'master'
end

# Pods for testing
target 'OpenWeatherTests' do
    pod 'Alamofire', '~> 4.0'
    pod 'Reqres'
    pod 'AlamofireObjectMapper', '~> 4.0'
    pod 'Swinject', '~> 2.0.0'
    pod 'SwinjectStoryboard', '~> 1.0.0'
    pod 'SDWebImage'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'BRYXBanner'
    pod 'ViperMcFlurry', :git => 'https://github.com/rambler-digital-solutions/ViperMcFlurry.git', :branch => 'master'
end
